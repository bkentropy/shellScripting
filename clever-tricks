# changes the extension to .sh to all files in the directory that
# do not have .sh at the end
for i in `ls | grep -v .*.sh`; do mv "$i" "$i.sh" ; done

# echos hello world but in a blue color, pretty neat
echo -e "\033[34m   Hello Colorful  World\!"

# cats out filename into the terminal with the edited pattern/action you supply
sed 's/^/    /' filename

# in vim use ^o to move to an older position of vim's cursor
# and use ^i to move to new positions (up until your last cursor position)  

# Searching in all files recursively using grep -r
grep -r "pattern" *
